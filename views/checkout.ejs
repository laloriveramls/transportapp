    <%
    const type = String(r.type || "").toUpperCase();
    const isPassenger = type === "PASSENGER";
    const isPackage = type === "PACKAGE";

    const payment = String(r.payment_method || "ONLINE").toUpperCase();
    const status = String(r.status || "").toUpperCase();

    const seats = Number(r.seats || 0);
    const totalSafe = (total != null && total !== "") ? Number(total) : Number(r.amount_total_mxn || 0);

    function fmtMXN(n){
        const v = Number(n || 0);
        return `$${v.toFixed(2)} MXN`;
    }
    function typeLabel(){
        return isPassenger ? "Pasaje" : "Paqueter√≠a";
    }

    const isOnline = payment === "ONLINE";
    const canPay = isOnline && (status === "PENDING_PAYMENT" || !status);
    const isPaid = status === "PAID";
    const canMount = (canPay && !isPaid && isOnline);

    const token = publicToken || "";
    const payUrl = `/pay/t/${encodeURIComponent(token)}`;
    %>

