<script>
    (() => {
        const drawer = document.getElementById("payDrawer");
        const openBtn = document.getElementById("openPayDrawer");
        const mountEl = document.getElementById("embedded-checkout");
        const loadingEl = document.getElementById("embedLoading");

        if (!drawer || !mountEl) return;

        const canMount = drawer.dataset.canMount === "1";
        const publishableKey = drawer.dataset.pk || "";
        const publicToken = (drawer.dataset.token || "").trim();

        let sessionId = null;

        // I must keep ONLY one EmbeddedCheckout instance per page.
        let stripe = null;
        let checkout = null;
        let checkoutInitPromise = null;

        let mounting = false;
        let mountedOnce = false;

        function setLoading(on) {
            if (!loadingEl) return;
            loadingEl.style.display = on ? "flex" : "none";
        }

        function openDrawer() {
            drawer.classList.add("open");
            drawer.setAttribute("aria-hidden", "false");
            document.body.classList.add("drawer-open");

            // If iframe already exists, I hide the loader immediately.
            if (mountEl.querySelector("iframe")) setLoading(false);
        }

        function closeDrawer() {
            drawer.classList.remove("open");
            drawer.setAttribute("aria-hidden", "true");
            document.body.classList.remove("drawer-open");

            // ‚úÖ I DO NOT unmount. I keep Stripe alive and mounted.
            if (mountEl.querySelector("iframe")) setLoading(false);
            else setLoading(true);
        }

        function safeTokenOrThrow() {
            if (!publicToken) throw new Error("Falta token p√∫blico de reserva.");
            return publicToken;
        }

        async function fetchClientSecret() {
            const tok = encodeURIComponent(safeTokenOrThrow());

            const res = await fetch(`/checkout/t/${tok}/create-session`, {
                method: "POST",
                headers: {"Content-Type": "application/json"},
            });

            if (!res.ok) {
                const txt = await res.text().catch(() => "");
                throw new Error(txt || "No se pudo iniciar el pago.");
            }

            const data = await res.json();
            sessionId = data.sessionId;
            return data.clientSecret;
        }

        function watchIframeAndHideLoading() {
            if (mountEl.querySelector("iframe")) {
                setLoading(false);
                return;
            }

            const obs = new MutationObserver(() => {
                if (mountEl.querySelector("iframe")) {
                    setLoading(false);
                    try {
                        obs.disconnect();
                    } catch {
                    }
                }
            });
            obs.observe(mountEl, {childList: true, subtree: true});

            let ticks = 0;
            const timer = setInterval(() => {
                ticks++;
                if (mountEl.querySelector("iframe")) {
                    setLoading(false);
                    clearInterval(timer);
                    try {
                        obs.disconnect();
                    } catch {
                    }
                    return;
                }
                if (ticks >= 100) { // ~12s
                    clearInterval(timer);
                    try {
                        obs.disconnect();
                    } catch {
                    }
                    setLoading(false);
                    mountEl.classList.add("danger");
                    mountEl.textContent = "No se pudo cargar el formulario. Cierra y vuelve a intentar.";
                }
            }, 120);
        }

        async function ensureCheckoutInitialized() {
            if (checkout) return checkout;

            if (!publishableKey) {
                setLoading(false);
                mountEl.classList.add("danger");
                mountEl.textContent = "Falta STRIPE_PUBLISHABLE_KEY.";
                throw new Error("Missing STRIPE_PUBLISHABLE_KEY");
            }

            if (!stripe) stripe = Stripe(publishableKey);

            // I init only once (promise cache).
            if (!checkoutInitPromise) {
                checkoutInitPromise = stripe.initEmbeddedCheckout({
                    fetchClientSecret,
                    onComplete: () => {
                        const tok = encodeURIComponent(publicToken || "");
                        const sid = encodeURIComponent(sessionId || "");
                        window.location.href = `/pay/t/${tok}${sid ? `?session_id=${sid}` : ""}`;
                    },
                });
            }

            checkout = await checkoutInitPromise;
            return checkout;
        }

        async function ensureMountedOnce() {
            if (!canMount) return;
            if (mountedOnce) return;        // ‚úÖ no remount
            if (mounting) return;
            mounting = true;

            try {
                mountEl.classList.remove("danger");
                if (mountEl.textContent) mountEl.textContent = "";

                // Stripe wants the mount empty the first time.
                try {
                    mountEl.replaceChildren();
                } catch {
                }

                setLoading(true);
                watchIframeAndHideLoading();

                const c = await ensureCheckoutInitialized();
                c.mount("#embedded-checkout");

                mountedOnce = true;
            } catch (e) {
                setLoading(false);
                mountEl.classList.add("danger");
                mountEl.textContent = `Error al cargar pago: ${String(e.message || e)}`;
            } finally {
                mounting = false;
            }
        }

        openBtn?.addEventListener("click", async () => {
            openDrawer();
            await ensureMountedOnce();
        });

        drawer.addEventListener("click", (ev) => {
            const t = ev.target;
            if (t && t.closest && t.closest("[data-close-drawer='1']")) closeDrawer();
        });

        document.addEventListener("keydown", (ev) => {
            if (ev.key === "Escape" && drawer.classList.contains("open")) closeDrawer();
        });
    })();
</script>

