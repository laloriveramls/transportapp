                    <% } %>

                    <% if (isPackage) { %>
                        <li><span class="k">Detalle</span><span class="v"><%= (r.package_details || "-") %></span></li>
                    <% } %>

                    <li><span class="k">Contacto</span><span class="v"><%= (r.customer_name || "-") %></span></li>
