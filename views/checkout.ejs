    <style>
        /* =========================
           Checkout - Drawer UX (polished)
           ========================= */

        .page-wrap {
            max-width: 1120px;
        }

        /* Hero */
        .hero {
            background: radial-gradient(900px 420px at 12% 0%, rgba(106, 15, 31, .20), transparent 55%),
            radial-gradient(700px 360px at 88% 10%, rgba(106, 15, 31, .10), transparent 60%);
            border: 1px solid var(--border);
            border-radius: 22px;
            box-shadow: var(--shadow);
            overflow: hidden;
            margin-bottom: 14px;
        }

        .hero-inner {
            padding: 18px 18px 14px;
        }

        .hero-title {
            margin: 0;
            font-weight: 850;
            letter-spacing: -.02em;
        }

        .hero-sub {
            color: var(--muted);
            font-size: .95rem;
            margin-top: 6px;
            max-width: 72ch;
        }

        .pill{
            display:inline-flex; align-items:center; gap:.5rem;
            padding: .42rem .72rem;
            border-radius: 999px;
            border:1px solid var(--border);
            background: var(--chip-bg);
            color: var(--chip-text);
            font-weight: 750;
            font-size: .9rem;
            white-space:nowrap;
        }

        .steps {
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
            align-items: center;
            padding: 0 18px 16px;
        }

        .step {
            display: flex;
            align-items: center;
            gap: 10px;
            color: var(--muted);
            font-weight: 650;
            font-size: .92rem;
        }

        .dot {
            width: 26px;
            height: 26px;
            border-radius: 999px;
            display: grid;
            place-items: center;
            border: 1px solid var(--border);
            background: color-mix(in srgb, var(--card) 86%, transparent);
            color: var(--muted);
            font-weight: 850;
            font-size: .85rem;
        }

        .step.active {
            color: var(--text);
        }

        .step.active .dot {
            background: var(--wine);
            border-color: color-mix(in srgb, var(--wine) 55%, var(--border));
            color: #fff;
        }

        .chev {
            color: var(--muted);
            opacity: .65;
        }

        /* Layout */
        .grid {
            display: grid;
            grid-template-columns: 1fr 360px;
            gap: 14px;
            align-items: start;
        }

        @media (max-width: 992px) {
            .grid {
                grid-template-columns: 1fr;
            }
        }

        .card-soft {
            background: var(--card);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            border-radius: 22px;
            overflow: hidden;
        }

        .card-head {
            padding: 16px 16px 12px;
            border-bottom: 1px solid var(--border);
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            gap: 12px;
        }

        .card-title {
            margin: 0;
            font-weight: 850;
            letter-spacing: -.01em;
            font-size: 1.05rem;
        }

        .card-sub {
            margin: 6px 0 0;
            color: var(--muted);
            font-size: .92rem;
        }

        .card-body {
            padding: 16px;
        }

        /* Summary list */
        .kv{
            display: grid;
            gap: .55rem;
            margin: 0;
            padding: 0;
            list-style: none;
        }
        .kv li{
            display: flex;
            justify-content: space-between;
            gap: 12px;
            padding: .65rem .75rem;
            border: 1px solid var(--border);
            border-radius: 16px;
            background: color-mix(in srgb, var(--card) 86%, transparent);
        }

        .kv .k {
            color: var(--muted);
            font-weight: 650;
        }

        .kv .v {
            color: var(--text);
            font-weight: 750;
            text-align: right;
        }

        .mono {
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
            font-size: .95rem;
            word-break: break-word;
        }

        /* Notes */
        .note{
            border: 1px solid var(--border);
            background: color-mix(in srgb, var(--card) 82%, transparent);
            border-radius: 18px;
            padding: 12px 14px;
            color: var(--muted);
        }

        .note strong {
            color: var(--text);
        }

        .danger {
            border-color: rgba(239, 68, 68, .35);
            background: rgba(239, 68, 68, .06);
            color: color-mix(in srgb, #ef4444 55%, var(--text));
        }

        /* Total box */
        .total-box {
            border: 1px solid var(--border);
            background: color-mix(in srgb, var(--card) 90%, transparent);
            border-radius: 18px;
            padding: 12px 14px;
            display: grid;
            gap: 8px;
        }

        .rowline {
            display: flex;
            justify-content: space-between;
            gap: 12px;
            color: var(--muted);
            font-weight: 650;
            font-size: .95rem;
        }

        .rowline strong {
            color: var(--text);
        }

        .rowline.big {
            font-size: 1.18rem;
            color: var(--text);
            font-weight: 900;
            padding-top: 6px;
            border-top: 1px dashed color-mix(in srgb, var(--border) 80%, transparent);
            margin-top: 2px;
        }

        /* Buttons */
        .btn-xs{
            padding: .62rem .95rem;
            border-radius: 14px;
            font-weight: 800;
            font-size: .96rem;
        }

        .btn-solid {
            border: 1px solid color-mix(in srgb, var(--border) 90%, transparent);
            background: color-mix(in srgb, var(--card) 88%, transparent);
            color: var(--text);
        }

        .btn-solid:hover {
            border-color: color-mix(in srgb, var(--wine) 40%, var(--border));
            background: color-mix(in srgb, var(--card) 72%, transparent);
            color: var(--text);
        }

        .btn-primary {
            border: 1px solid color-mix(in srgb, var(--wine) 55%, var(--border));
            background: var(--wine);
            color: #fff;
        }

        .btn-primary:hover {
            background: color-mix(in srgb, var(--wine) 92%, #000 8%);
            color: #fff;
        }

        .btn-primary:disabled {
            opacity: .55;
            cursor: not-allowed;
        }

        .pay-cta {
            display: grid;
            gap: 12px;
        }

        .pay-cta .hint {
            color: var(--muted);
            font-size: .92rem;
            margin: 0;
            line-height: 1.25;
        }

        .actions {
            display: flex;
            justify-content: center;
            gap: 10px;
            flex-wrap: wrap;
            margin-top: 14px;
        }

        @media (max-width: 576px) {
            .actions a {
                width: 100%;
                text-align: center;
            }
        }

        /* =========================
           Drawer (Stripe)
           ========================= */
        .drawer {
            position: fixed;
            inset: 0;
            z-index: 200;
            pointer-events: none;
        }

        .drawer .backdrop {
            position: absolute;
            inset: 0;
            background: rgba(2, 6, 23, .55);
            opacity: 0;
            transition: opacity .18s ease;
        }

        .drawer .panel {
            position: absolute;
            top: 0;
            right: 0;
            height: 100%;
            width: min(560px, 100%);
            background: var(--card);
            border-left: 1px solid var(--border);
            box-shadow: 0 24px 80px rgba(0, 0, 0, .25);
            transform: translateX(105%);
            transition: transform .22s ease;
            display: flex;
            flex-direction: column;
        }

        .drawer.open {
            pointer-events: auto;
        }

        .drawer.open .backdrop {
            opacity: 1;
        }

        .drawer.open .panel {
            transform: translateX(0);
        }

        @media (max-width: 768px) {
            .drawer .panel {
                top: auto;
                bottom: 0;
                right: 0;
                left: 0;
                width: 100%;
                height: min(92vh, 720px);
                border-left: none;
                border-top: 1px solid var(--border);
                border-radius: 22px 22px 0 0;
                transform: translateY(105%);
            }

            .drawer.open .panel {
                transform: translateY(0);
            }
        }

        .drawer-head {
            padding: 14px 16px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            gap: 12px;
            background: color-mix(in srgb, var(--card) 92%, transparent);
            backdrop-filter: blur(10px);
        }

        .drawer-title {
            margin: 0;
            font-weight: 900;
            letter-spacing: -.01em;
            font-size: 1.08rem;
            line-height: 1.15;
        }

        .drawer-sub {
            margin: 6px 0 0;
            color: var(--muted);
            font-size: .92rem;
        }

        .close-btn {
            border: 1px solid var(--border);
            background: color-mix(in srgb, var(--card) 88%, transparent);
            color: var(--text);
            width: 40px;
            height: 40px;
            border-radius: 14px;
            display: grid;
            place-items: center;
            font-weight: 900;
            line-height: 1;
        }

        .close-btn:hover {
            border-color: color-mix(in srgb, var(--wine) 40%, var(--border));
        }

        .drawer-body {
            padding: 14px 16px 16px;
            overflow: auto;
            -webkit-overflow-scrolling: touch;
            display: grid;
            gap: 12px;
        }

        /* Shell debe ser relative para el overlay */
        .embed-shell {
            position: relative;
            background: color-mix(in srgb, var(--card) 92%, transparent);
            border-radius: 18px;
            padding: 10px;
        }

        /* IMPORTANT: mount must be EMPTY */
        .embed-mount {
            border-radius: 14px;
            overflow: auto;
            -webkit-overflow-scrolling: touch;
            background: var(--card);
            border: 1px solid color-mix(in srgb, var(--border) 90%, transparent);
            min-height: 380px;
            max-height: 62vh;
        }

        @media (max-width: 768px) {
            .embed-mount {
                min-height: 380px;
                max-height: 58vh;
            }
        }

        /* Loading overlay (sibling of mount; mount stays empty) */
        .embed-loading {
            position: absolute;
            inset: 10px;
            border-radius: 14px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            padding: 18px;
            color: var(--muted);
            font-weight: 800;
            background: color-mix(in srgb, var(--card) 86%, transparent);
            border: 1px solid color-mix(in srgb, var(--border) 85%, transparent);
            backdrop-filter: blur(8px);
        }

        .mini-spinner {
            width: 16px;
            height: 16px;
            border: 2px solid color-mix(in srgb, var(--muted) 35%, transparent);
            border-top-color: var(--muted);
            border-radius:999px;
            animation: spin .8s linear infinite;
        }
        @keyframes spin { to { transform: rotate(360deg); } }

        /* Lock body scroll when drawer open */
        body.drawer-open {
            overflow: hidden;
            touch-action: none;
        }
    </style>
</head>

