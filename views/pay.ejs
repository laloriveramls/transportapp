<main class="container py-4">

    <%
    const type = (r.type || "").toUpperCase();
    const isPassenger = type === "PASSENGER";
    const isPackage = type === "PACKAGE";

    const payment = (r.payment_method || "TAQUILLA").toUpperCase();
    const status = (r.status || "").toUpperCase();

    const isOnline = payment === "ONLINE";
    const isPendingOnline = isOnline && (status === "PENDING_PAYMENT" || !status);
    const isPaid = status === "PAID";

    // I read the ticket code coming from transporte_tickets (passed by backend).
    const tkCode = (ticketCode || "").trim();
    const hasTicket = !!tkCode;

    const unit = Number(r.unit_price_mxn || 120);
    const seats = Number(r.seats || 0);

    const total =
            (r.amount_total_mxn != null && r.amount_total_mxn !== "")
                    ? Number(r.amount_total_mxn)
                    : (isPassenger ? unit * Math.max(1, seats) : unit);

    function fmtMXN(n){
        const v = Number(n || 0);
        return v.toLocaleString("es-MX", {style: "currency", currency: "MXN"});
    }

    function typeLabel(){
        return isPassenger ? "Pasaje" : "Paqueter√≠a";
    }

    function paymentLabel(){
        if (payment === "TAQUILLA") return "Taquilla";
        if (payment === "TRANSFERENCIA") return "Transferencia";
        if (payment === "ONLINE") return "Pago en l√≠nea";
        return payment;
    }

    function statusText(){
        if (!status) return "Pendiente de confirmaci√≥n";
        if (status === "PAY_AT_BOARDING") return "Pago en taquilla";
        if (status === "PENDING_PAYMENT") return "Pendiente de pago";
        if (status === "PAID") return "Pagado";
        if (status === "CANCELLED") return "Cancelado";
        return status;
    }

    function statusClass() {
        if (status === "PAID") return "pill--ok";
        if (status === "CANCELLED") return "pill--bad";
        if (status === "PENDING_PAYMENT" || status === "PAY_AT_BOARDING" || !status) return "pill--warn";
        return "";
    }

    function headerMeta() {
        if (payment === "ONLINE") {
            if (status === "PAID") return "Tu pago fue confirmado. Guarda tu folio y comparte el resumen si lo necesitas.";
            return "Guarda tu folio. Si tu pago est√° pendiente, puedes completarlo aqu√≠ o escribirnos por WhatsApp.";
        }
        if (payment === "TRANSFERENCIA") {
            return "Guarda tu folio. Env√≠a tu comprobante y folio por WhatsApp para confirmar m√°s r√°pido.";
        }
        return "Guarda tu folio. Si necesitas confirmar r√°pido, env√≠alo por WhatsApp.";
    }

    function noteText(){
        if (payment === "TAQUILLA"){
            return "Tu reserva qued√≥ registrada. El pago se realiza en taquilla. Puedes enviar el folio por WhatsApp para agilizar.";
        }
        if (payment === "TRANSFERENCIA"){
            return "Tu reserva qued√≥ registrada. Env√≠a el comprobante de transferencia junto con tu folio por WhatsApp para confirmar m√°s r√°pido.";
        }
        if (payment === "ONLINE"){
            if (status === "PAID") return "Tu pago en l√≠nea fue confirmado. Conserva tu folio para cualquier aclaraci√≥n.";
            return "Para confirmar tu reserva, completa el pago en l√≠nea. Si lo prefieres, tambi√©n puedes escribirnos por WhatsApp.";
        }
        return "Tu reserva qued√≥ registrada. Puedes enviar el folio por WhatsApp para agilizar.";
    }
    %>

    <div class="card-soft">
        <div class="top">
            <div class="header-row">
                <div class="header-left">
                    <div class="pills">
                        <div class="pill <%= statusClass() %>">‚úÖ Reserva creada</div>
                        <div class="pill">üßæ <%= statusText() %></div>
                        <div class="pill">üí≥ <%= paymentLabel() %></div>
                    </div>

                    <h1 class="h3 title mt-2">Listo</h1>
                    <div class="meta mt-1"><%= headerMeta() %></div>
                </div>

                <div class="btn-group-top">
                    <% if (isPaid && hasTicket) { %>
                        <a class="btn btn-ghost btn-xs" href="/ticket/<%= tkCode %>" target="_blank" rel="noopener">
                            üé´ Ver ticket
                        </a>
                        <a class="btn btn-pdf btn-xs" href="/ticket/<%= tkCode %>/pdf" target="_blank" rel="noopener">
                            üìÑ PDF
                        </a>
