<!doctype html>
<html lang="es" data-theme="light">
<head>
    <%- include('partials/head') %>
    <link href="/css/theme.css" rel="stylesheet">
    <title>Reserva creada</title>

    <style>
        .card-soft{
            background: var(--card);
            border: 1px solid var(--border);
            box-shadow: var(--shadow);
            border-radius: 22px;
            overflow: hidden;
        }

        .top{
            padding: 18px 18px 14px;
            background:
                    radial-gradient(1000px 520px at 10% 0%, rgba(106,15,31,.20), transparent 55%),
                    radial-gradient(800px 420px at 90% 10%, rgba(106,15,31,.10), transparent 60%);
            border-bottom: 1px solid var(--border);
        }

        .body{ padding: 18px; }

        .title{
            letter-spacing: -.02em;
            font-weight: 750;
            margin: 0;
        }

        .meta{ color: var(--muted); font-size: .95rem; }

        .pill{
            display:inline-flex; align-items:center; gap:.5rem;
            padding:.45rem .75rem; border-radius:999px;
            border:1px solid var(--border);
            background: var(--chip-bg);
            color: var(--chip-text);
            font-weight:650; font-size:.9rem;
            white-space:nowrap;
        }

        .folio-wrap{
            display:flex;
            align-items:stretch;
            gap:10px;
            flex-wrap:wrap;
            margin-top:10px;
        }

        .folio-box{
            flex: 1 1 320px;
            border:1px solid color-mix(in srgb, var(--wine) 28%, var(--border));
            background: color-mix(in srgb, var(--wine) 8%, var(--card));
            border-radius: 16px;
            padding: 12px 14px;
            min-width: 240px;
        }

        .folio-label{
            color: var(--muted);
            font-size: .92rem;
            margin-bottom: 4px;
        }

        .mono{
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono","Courier New", monospace;
            font-size: 1rem;
            font-weight: 800;
            letter-spacing: .02em;
            color: var(--text);
            word-break: break-word;
        }

        .btn-xs{
            padding:.55rem .85rem;
            border-radius:14px;
            font-weight:700;
            font-size:.95rem;
            display:inline-flex;
            align-items:center;
            gap:.45rem;
            line-height:1.1;
            white-space:nowrap;
        }

        .btn-ghost{
            border:1px solid var(--border);
            background:transparent;
            color: var(--text);
        }
        .btn-ghost:hover{
            border-color: color-mix(in srgb, var(--wine) 40%, var(--border));
            background: color-mix(in srgb, var(--card) 70%, transparent);
            color: var(--text);
        }

        /* ‚úÖ Solid "wine" button (so it works even if theme.css doesn't have it) */
        .btn-wine {
            border: 1px solid color-mix(in srgb, var(--wine) 55%, var(--border));
            background: var(--wine);
            color: #fff;
        }

        .btn-wine:hover {
            background: color-mix(in srgb, var(--wine) 92%, #000 8%);
            color: #fff;
        }

        .btn-wa{
            background:#25D366;
            border-color:#25D366;
            color:#fff;
        }
        .btn-wa:hover{
            background:#1fb85a;
            border-color:#1fb85a;
            color:#fff;
        }

        .btn-pdf{
            border:1px solid color-mix(in srgb, var(--wine) 40%, var(--border));
            background:color-mix(in srgb, var(--wine) 12%, transparent);
            color:var(--text);
        }
        .btn-pdf:hover{
            border-color:var(--wine);
            background:color-mix(in srgb, var(--wine) 18%, transparent);
            color:var(--text);
        }

        .btn-group-top{
            display:flex;
            gap:10px;
            flex-wrap:wrap;
            align-items:flex-start;
            justify-content:flex-end;
        }

        /* Key/Value */
        .kv{
            list-style:none; padding:0; margin:0;
            display:grid;
            grid-template-columns: 1fr 1fr;
            gap:.65rem;
        }
        .kv li{
            display:flex;
            gap:12px;
            padding:.7rem .8rem;
            border:1px solid var(--border);
            border-radius:14px;
            background: color-mix(in srgb, var(--card) 86%, transparent);
            align-items:flex-start;
        }
        .kv .k{
            color: var(--muted);
            font-weight:650;
            font-size:.92rem;
            min-width: 120px;
        }
        .kv .v{
            color: var(--text);
            font-weight:650;
            text-align:right;
            flex:1;
            word-break: break-word;
        }

        .note{
            border:1px solid var(--border);
            background: color-mix(in srgb, var(--card) 82%, transparent);
            border-radius: 16px;
            padding: 12px 14px;
            color: var(--muted);
        }

        .note-strong{
            border:1px solid color-mix(in srgb, var(--wine) 35%, var(--border));
            background: color-mix(in srgb, var(--wine) 6%, var(--card));
            border-radius: 16px;
            padding: 12px 14px;
            color: var(--text);
        }

        .bottom-actions{
            display:flex;
            gap:10px;
            flex-wrap:wrap;
        }

        @media (max-width: 576px){
            .top{ padding: 14px 14px 12px; }
            .body{ padding: 14px; }

            .title{ font-size: 1.35rem; }
            .meta{ font-size: .92rem; }

            .btn-group-top{
                width:100%;
                justify-content:flex-start;
            }
            .btn-xs{
                width:100%;
                justify-content:center;
                padding:.68rem .9rem;
                border-radius: 16px;
            }

            .folio-box{ flex: 1 1 100%; }
            .folio-wrap{ gap:10px; }

            .kv{ grid-template-columns: 1fr; }
            .kv li{
                flex-direction:column;
                gap:6px;
            }
            .kv .k{ min-width: 0; }
            .kv .v{ text-align:left; }

            .bottom-actions .btn-xs{ width:100%; }
        }
    </style>
</head>

<body>
<nav class="navbar navbar-dark app-navbar">
    <div class="container d-flex justify-content-between align-items-center">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/">
            <span class="brand-dot"></span>
            <span class="fw-semibold">TransportApp</span>
        </a>

        <button id="themeToggle" class="theme-btn" type="button" aria-label="Cambiar tema">
            <span id="themeIcon">üåô</span> <span class="d-none d-sm-inline">Tema</span>
        </button>
    </div>
</nav>

<main class="container py-4">

    <%
    const type = (r.type || "").toUpperCase();
    const isPassenger = type === "PASSENGER";
    const isPackage = type === "PACKAGE";

    const payment = (r.payment_method || "TAQUILLA").toUpperCase();
    const status = (r.status || "").toUpperCase();

    const isOnline = payment === "ONLINE";
    const isPendingOnline = isOnline && (status === "PENDING_PAYMENT" || !status);
    const isPaid = status === "PAID";

    // ‚úÖ comes from transporte_tickets (passed by backend)
    const tkCode = (ticketCode || "").trim();
    const hasTicket = !!tkCode;

    const unit = Number(r.unit_price_mxn || 120);
    const seats = Number(r.seats || 0);

    const total =
            (r.amount_total_mxn != null && r.amount_total_mxn !== "")
                    ? Number(r.amount_total_mxn)
                    : (isPassenger ? unit * Math.max(1, seats) : unit);

    function fmtMXN(n){
        const v = Number(n || 0);
        return `$${v.toFixed(2)} MXN`;
    }

    function typeLabel(){
        return isPassenger ? "Pasaje" : "Paqueter√≠a";
    }

    function paymentLabel(){
        if (payment === "TAQUILLA") return "Taquilla";
        if (payment === "TRANSFERENCIA") return "Transferencia";
        if (payment === "ONLINE") return "Pago en l√≠nea";
        return payment;
    }

    function statusText(){
        if (!status) return "Pendiente de confirmaci√≥n";
        if (status === "PAY_AT_BOARDING") return "Pago en taquilla";
        if (status === "PENDING_PAYMENT") return "Pendiente de pago";
        if (status === "PAID") return "Pagado";
        return status;
    }

    function noteText(){
        if (payment === "TAQUILLA"){
            return "Tu reserva qued√≥ registrada. El pago se realiza en taquilla. Puedes enviar el folio por WhatsApp para agilizar.";
        }
        if (payment === "TRANSFERENCIA"){
            return "Tu reserva qued√≥ registrada. Env√≠a el comprobante de transferencia junto con tu folio por WhatsApp para confirmar m√°s r√°pido.";
        }
        if (payment === "ONLINE"){
            if (status === "PAID") return "Tu pago en l√≠nea fue confirmado. Conserva tu folio para cualquier aclaraci√≥n.";
            return "Para confirmar tu reserva, completa el pago en l√≠nea. Si lo prefieres, tambi√©n puedes escribirnos por WhatsApp.";
        }
        return "Tu reserva qued√≥ registrada. Puedes enviar el folio por WhatsApp para agilizar.";
    }
    %>

    <div class="card-soft">
        <div class="top">
            <div class="d-flex flex-wrap justify-content-between align-items-start gap-3">
                <div>
                    <div class="pill">‚úÖ Reserva creada</div>
                    <h1 class="h3 title mt-2">Listo</h1>
                    <div class="meta mt-1">Guarda tu folio y env√≠alo por WhatsApp si necesitas confirmar r√°pido.</div>
                </div>

                <div class="btn-group-top">
                    <% if (isPaid && hasTicket) { %>
                        <a class="btn btn-ghost btn-xs" href="/ticket/<%= tkCode %>" target="_blank" rel="noopener">
                            üé´ Ver ticket
                        </a>
                        <a class="btn btn-pdf btn-xs" href="/ticket/<%= tkCode %>/pdf" target="_blank" rel="noopener">
                            üìÑ PDF
                        </a>
                    <% } %>

                    <button type="button" class="btn btn-ghost btn-xs" id="copyBtn">üìã Copiar folio</button>
                    <a class="btn btn-wa btn-xs" id="waBtn" target="_blank" href="#">üí¨ Enviar por WhatsApp</a>
                </div>
            </div>

            <div class="folio-wrap">
                <div class="folio-box">
                    <div class="folio-label">Tu folio</div>
                    <div class="mono" id="folioText"><%= folio %></div>
                </div>
            </div>
        </div>

        <div class="body">

            <% if (isPendingOnline) { %>
                <div class="note-strong mb-3">
                    <div class="fw-semibold">üí≥ Pago en l√≠nea pendiente</div>
                    <div class="mt-1" style="color: var(--muted);">
                        Total a pagar:
                        <span class="fw-semibold" style="color: var(--text);"><%= fmtMXN(total) %></span>
                    </div>

                    <div class="mt-3 bottom-actions">
                        <a class="btn btn-wine btn-xs" href="/checkout/t/<%= encodeURIComponent(publicToken || "") %>">Pagar
                            ahora</a>
                        <button type="button" class="btn btn-ghost btn-xs" id="refreshStatusBtn">üîÑ Actualizar estado
                        </button>
                        <a class="btn btn-ghost btn-xs" href="/reserve">Nueva reserva</a>
                    </div>
                </div>
            <% } %>

            <% if (isPaid && !hasTicket) { %>
                <div class="note-strong mb-3">
                    <div class="fw-semibold">‚úÖ Pago confirmado</div>
                    <div class="mt-1" style="color: var(--muted);">
                        Estamos generando tu ticket‚Ä¶ Si no aparece todav√≠a, presiona <strong>Actualizar estado</strong>.
                    </div>
                    <div class="mt-3 bottom-actions">
                        <button type="button" class="btn btn-ghost btn-xs" id="refreshStatusBtn2">üîÑ Actualizar estado
                        </button>
                    </div>
                </div>
            <% } %>

            <ul class="kv mb-3">
                <li><span class="k">Tipo</span><span class="v"><%= typeLabel() %></span></li>

                <% if (isPassenger) { %>
                    <li><span class="k">Pasajeros</span><span class="v"><%= Math.max(1, Number(r.seats || 1)) %></span></li>
                <% } %>

                <% if (isPackage) { %>
                    <li><span class="k">Detalle</span><span class="v"><%= (r.package_details || "-") %></span></li>
                <% } %>

                <li><span class="k">Ruta</span><span class="v"><%= r.direction === "VIC_TO_LLE" ? "Victoria - Llera" : "Llera - Victoria" %></span></li>
                <li><span class="k">Fecha</span><span class="v"><%= r.trip_date %></span></li>
                <li><span class="k">Hora</span><span class="v"><%= r.depart_time %></span></li>
                <li><span class="k">Contacto</span><span class="v"><%= r.customer_name %></span></li>
                <li><span class="k">Tel√©fono</span><span class="v" id="phoneText"><%= r.phone %></span></li>
                <li><span class="k">M√©todo de pago</span><span class="v"><%= paymentLabel() %></span></li>

                <% if (payment === "TRANSFERENCIA" && r.transfer_ref) { %>
                    <li><span class="k">Referencia</span><span class="v"><%= r.transfer_ref %></span></li>
                <% } %>

                <li><span class="k">Total a pagar</span><span class="v"><%= fmtMXN(total) %></span></li>
                <li><span class="k">Estado</span><span class="v"><%= statusText() %></span></li>

                <% if (isPaid && hasTicket) { %>
                    <li><span class="k">Ticket</span><span class="v"><%= tkCode %></span></li>
                <% } %>
            </ul>

            <div class="note">
                <%= noteText() %>
            </div>

            <div class="mt-3 bottom-actions">
                <a class="btn btn-ghost btn-xs" href="/reserve">‚ûï Nueva reserva</a>
                <a class="btn btn-ghost btn-xs" href="/">üè† Volver al inicio</a>
            </div>
        </div>
    </div>

</main>

<script src="/js/theme.js"></script>

<script type="application/json" id="reservationData">
<%- JSON.stringify({
        folio,
        public_token: (publicToken || ""),
        direction: r.direction,
        trip_date: r.trip_date,
        depart_time: r.depart_time,
        customer_name: r.customer_name,
        phone: r.phone,

        type: r.type || "",
        seats: r.seats || 0,
        package_details: r.package_details || "",

        payment_method: r.payment_method || "TAQUILLA",
        transfer_ref: r.transfer_ref || null,
        status: r.status || "",

        // ‚úÖ ticket code comes from transporte_tickets
        ticket_code: (ticketCode || ""),

        unit_price_mxn: r.unit_price_mxn || 120,
        amount_total_mxn: r.amount_total_mxn || null
    }) %>
</script>

<script>
    const copyBtn = document.getElementById("copyBtn");
    const waBtn = document.getElementById("waBtn");

    const adminWa = "8344756376";

    function digitsOnly(s){ return String(s || "").replace(/\D/g, ""); }

    let data = {};
    try {
        const raw = document.getElementById("reservationData")?.textContent || "{}";
        data = JSON.parse(raw);
    } catch {
        data = {};
    }

    function niceRoute(dir){
        return dir === "VIC_TO_LLE" ? "Victoria a Llera" : "Llera a Victoria";
    }

    function niceType(t){
        const x = String(t || "").toUpperCase();
        if (x === "PACKAGE") return "Paqueter√≠a";
        if (x === "PASSENGER") return "Pasaje";
        return t ? t : "No especificado";
    }

    function nicePayment(m){
        const x = String(m || "TAQUILLA").toUpperCase();
        if (x === "TAQUILLA") return "Taquilla";
        if (x === "TRANSFERENCIA") return "Transferencia";
        if (x === "ONLINE") return "Pago en l√≠nea";
        return x;
    }

    function niceStatus(st){
        const x = String(st || "").toUpperCase();
        if (!x) return "Pendiente de confirmaci√≥n";
        if (x === "PAY_AT_BOARDING") return "Pago en taquilla";
        if (x === "PENDING_PAYMENT") return "Pendiente de pago";
        if (x === "PAID") return "Pagado";
        return x;
    }

    function formatMXN(n){
        const v = Number(n || 0);
        return `$${v.toFixed(2)} MXN`;
    }

    const typeLabel = niceType(data.type);
    const isPassenger = String(data.type || "").toUpperCase() === "PASSENGER";
    const isPackage = String(data.type || "").toUpperCase() === "PACKAGE";

    const seats = Number(data.seats || 0);
    const unit = Number(data.unit_price_mxn || 120);

    const total =
        (data.amount_total_mxn != null && data.amount_total_mxn !== "")
            ? Number(data.amount_total_mxn)
            : (isPassenger ? unit * Math.max(1, seats) : unit);

    const payLabel = nicePayment(data.payment_method);
    const transferRef = data.transfer_ref ? String(data.transfer_ref) : "";
    const statusLabel = niceStatus(data.status);

    const lines = [
        "Hola, acabo de realizar una reserva y me gustar√≠a que me ayuden a confirmarla.",
        "",
        "Datos de la reserva",
        "-------------------",
        `Folio: ${data.folio || "-"}`,
        `Nombre: ${data.customer_name || "-"}`,
        `Telefono: ${data.phone || "-"}`,
        `Tipo: ${typeLabel}`,
        isPassenger ? `Pasajeros: ${Math.max(1, Number(seats || 1))}` : null,
        `Ruta: ${niceRoute(data.direction)}`,
        `Fecha: ${data.trip_date || "-"}`,
        `Hora: ${data.depart_time || "-"}`,
        `Metodo de pago: ${payLabel}`,
        (String(data.payment_method || "").toUpperCase() === "TRANSFERENCIA" && transferRef)
            ? `Referencia: ${transferRef}`
            : null,
        `Total a pagar: ${formatMXN(total)}`,
        `Estado: ${statusLabel}`,
        isPackage ? "" : null,
        isPackage ? "Detalles de paqueteria" : null,
        isPackage ? "---------------------" : null,
        isPackage ? (data.package_details ? String(data.package_details) : "-") : null
    ].filter(Boolean);

    const msg = lines.join("\n");

    const adminDigits = digitsOnly(adminWa);
    if (adminDigits.length >= 10) {
        waBtn.href = `https://wa.me/52${adminDigits}?text=${encodeURIComponent(msg)}`;
    } else {
        waBtn.classList.add("disabled");
        waBtn.setAttribute("aria-disabled","true");
    }

    copyBtn?.addEventListener("click", async () => {
        try{
            await navigator.clipboard.writeText(String(data.folio || ""));
            const old = copyBtn.textContent;
            copyBtn.textContent = "‚úÖ Copiado";
            setTimeout(() => copyBtn.textContent = old, 1200);
        } catch {
            alert("No pude copiar. Selecciona el folio manualmente.");
        }
    });

    const refreshBtn = document.getElementById("refreshStatusBtn");
    refreshBtn?.addEventListener("click", () => location.reload());

    const refreshBtn2 = document.getElementById("refreshStatusBtn2");
    refreshBtn2?.addEventListener("click", () => location.reload());

    (function autoRefreshAfterStripe() {
        const params = new URLSearchParams(window.location.search);
        const sid = params.get("session_id");
        if (!sid) return;

        const st = String(data.status || "").toUpperCase();
        if (st === "PAID") return;

        let tries = 0;
        const maxTries = 5;

        const timer = setInterval(() => {
            tries++;
            if (tries > maxTries) return clearInterval(timer);
            location.reload();
        }, 2500);
    })();
</script>
</body>
</html>
