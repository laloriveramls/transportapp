<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script>
    // Admin oculto: 3 taps en 1.2s
    (function () {
        const hotspot = document.getElementById("adminHotspot");
        let taps = 0;
        let timer = null;

        function reset() {
            taps = 0;
            if (timer) clearTimeout(timer);
            timer = null;
        }

        hotspot.addEventListener("click", () => {
            taps += 1;
            if (!timer) timer = setTimeout(reset, 1200);
            if (taps >= 3) {
                reset();
                window.location.href = "/admin/login";
            }
        });
    })();

    // Copiar telÃ©fono
    (function () {
        const btn = document.getElementById("copyPhoneBtn");
        const phone = "8344756376";
        btn?.addEventListener("click", async () => {
            try {
                await navigator.clipboard.writeText(phone);
                const old = btn.textContent;
                btn.textContent = "Copiado âœ…";
                setTimeout(() => btn.textContent = old, 1400);
            } catch {
                alert("No pude copiar. NÃºmero: " + phone);
            }
        });
    })();
</script>

